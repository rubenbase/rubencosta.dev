{
    "name": "rubencosta.dev",
    "description": "Personal website",
    "author": "Ruben Costa",
    "version": "1.0.0",
    "license": "MIT",
    "homepage": "https://github.com/rubenbase/rubencosta.dev#readme",
    "main": "index.js",
    "private": true,
    "workspaces": [
        "packages/common",
        "packages/landing",
        "packages/reusecore"
    ],
    "scripts": {
        "clean": "lerna clean --yes && rimraf node_modules",
        "start": "lerna run --parallel dev",
        "web": "yarn workspace next-landing run dev",
        "test": "echo 'Testing the Tests ********'",
        "landing-build": "rimraf dist && yarn workspace next-landing run build",
        "landing-start": "yarn workspace next-landing run start",
        "prebuild-public": "rimraf \"dist/functions/**\" && rimraf \"dist/public\"",
        "build-public": "cpx \"packages/common/src/assets/**/*.*\" \"dist/public/static\" -C && cpx \"public/**/*.*\" \"dist/public\" -C",
        "netlify-deploy": "yarn workspace next-landing run netlify-build"
    },
    "devDependencies": {
        "@babel/cli": "^7.5.0",
        "cpx": "^1.5.0",
        "cross-env": "^5.2.0",
        "husky": "^3.0.0",
        "lerna": "^3.15.0",
        "lint-staged": "^9.2.0",
        "prettier": "^1.18.2",
        "rimraf": "^2.6.3"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/rubenbase/rubencosta.dev.git"
    },
    "bugs": {
        "url": "https://github.com/rubenbase/rubencosta.dev/issues"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{js,md,css}": [
            "prettier --trailing-comma es5 --single-quote --write",
            "git add"
        ]
    }
}
